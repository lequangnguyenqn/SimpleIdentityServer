    "version": "0.2.0",
    "configurations": [
        {
            "name": "IdentityServer Debugger: .NET Core Docker Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [ "exec", "-i", "identityserver" ],
                "debuggerPath": "/root/vsdbg/vsdbg",
                "pipeCwd": "${workspaceRoot}",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/src": "${workspaceRoot}/SimpleIdentityServer"
            }
        },
        {
            "name": "FastAPI-Backend Debugger: Python Docker Attach",
            "type": "debugpy",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/fastapi-backend/src/",
                    "remoteRoot": "/app/src"
                }
            ],
            "connect": {
                "port": 5678,
                "host": "127.0.0.1"
            }
        }
    ]
}